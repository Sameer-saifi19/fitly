generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MEMBER
}

model Admin {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum fitnessGoal {
  LOSS
  GAIN
}

model Trainee {
  id          String       @id @default(cuid())
  name        String
  email       String?      @unique
  phone       Int          @unique
  age         Int
  address     String
  fitnessgoal fitnessGoal?
  memberships Membership[]
  joinedAt    DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Membership {
  id        String   @id @default(cuid())
  user      Trainee  @relation(fields: [userId], references: [id])
  userId    String
  plan      String
  startDate DateTime
  endDate   DateTime
  isActive  Boolean
}
